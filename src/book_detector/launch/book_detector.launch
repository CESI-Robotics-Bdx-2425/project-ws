<launch>
    <arg name="marker_length" default="0.04" />
    <arg name="scan_limit" default="3" />

    <node name="BookDetector" pkg="book_detector" type="ArucoDetector.py" output="screen">
        <param name="marker_length" value="$(arg marker_length)" />
        <param name="scan_limit" value="$(arg scan_limit)" />
        <rosparam file="$(find book_detector)/config/master_calibration.yaml" />
    </node>
</launch>